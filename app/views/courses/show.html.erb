<div class="row">  

  <div class="group">
    <%= link_to("新增", new_course_path(@course), :class => "btn btn-warning pull-right" ) %>
    <%= link_to("修改", edit_course_path(@course), :class => "btn btn-primary pull-right" ) %>
  </div>

  <div class="col-md-9">
    <p>
      <strong>Name:</strong>
      <%= @course.name %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @course.category %>
    </p>

    <p>
      <strong>Year:</strong>
      <%= @course.year %>
    </p>

    <p>
      <strong>Grade:</strong>
      <%= @course.grade %>
    </p>

    <p>
      <strong>Teacher:</strong>
      <%= @course.teacher %>
    </p>

    <p>
      <strong>Note:</strong>
      <%= simple_format(@course.note) %>
    </p>

    <p>
      <%= link_to simple_name(@course.CourseData), :action => 'download_file', :id => @course.id %>
    </p>
  </div>

</div>
