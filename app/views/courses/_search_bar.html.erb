<div class="row">
  <div class="col-sm-9 col-lg-8 col-lg-offset-2">
    <%= form_tag search_courses_path , :method => :get, :class => "courses-search-form" do %>
      <div class="input-group">
          <input type="text" class="form-control", name="q" value="<%= params[:q] %>" placeholder="搜尋課程或教授關鍵字...">

          <span class="input-group-btn">
            <button type="submit" class="btn btn-default">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
        </div>
    <% end %>
  </div>

  <div class="col-sm-3 col-lg-2">
    <% if can? :create, Course %>
      <%= link_to("分享考古題", inform_courses_path , :remote => true, :class => "btn btn-primary" ) %>
    <% end %>
  </div>
</div>
