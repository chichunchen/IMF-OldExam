<div class="col-md-4 col-md-offset-4">
  
  <h2 class="text-center">修改 <%= resource_name.to_s.humanize %></h2>
  <hr>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, :label => "姓名",autocomplete: "on", required: false %>

      <%= f.input :email, :label => "信箱",required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", :label => "新密碼", hint: "如果沒有要修改密碼，請勿輸入", required: false %>
      <%= f.input :password_confirmation, :label => "確認新密碼", required: false %>
      <%= f.input :current_password, :label => "目前密碼",hint: "請輸入密碼完成設定修改", required: true %>
    </div>

    <div class="form-actions">
      <hr>
      <%= f.button :submit, "更新帳號" %>
    </div>
  <% end %>

  <hr>
  <h3>取消帳號</h3>

  <p>不喜歡? <%= link_to "取消帳號", registration_path(resource_name), data: { confirm: "確定嗎?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

</div>
