<div class="col-md-4 col-md-offset-4">

  <h2 class="text-center">註冊</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-inputs">
      <br>
      <%= f.text_field :name, autofocus: true, :class => "form-control", :placeholder => "使用者名稱" %>
      <br>
      <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "信箱" %>
      <br>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "密碼" %>

      <br>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "驗證密碼" %>
    </div>

    <hr>
    <div class="form-actions">
    	<%= f.submit "提交", :class => "btn btn-primary" %>
    </div>

  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
</div>